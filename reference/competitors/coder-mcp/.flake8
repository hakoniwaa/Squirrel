[flake8]
max-line-length = 120
max-complexity = 15
extend-ignore =
    E203,
    W503,
    E501,
    E722,
    F401,
    # Type annotations
    ANN101,
    ANN102,
    ANN201,
    ANN202,
    ANN204,
    ANN205,
    ANN206,
    # Docstrings
    D100,
    D104,
    D107,
    D200,
    D205,
    D400,
    D401,
    # Import order (handled by isort)
    I001,
    I005,
    # f-string placeholders
    F541,
    # Test specific
    PT004,
    PT006,
    PT022,
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    .tox,
    docs,
    tests/fixtures
per-file-ignores =
    tests/*:D101,D102,D103,S101,S105,S106,ANN001,ANN002,ANN003,F401,F841
    __init__.py:D104,F401
    */config.py:C901
    */settings.py:C901
