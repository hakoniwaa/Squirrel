{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist-tests",
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["packages/*/tests/**/*", "packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-tests",
    "packages/*/dist",
    "packages-backup"
  ]
}
