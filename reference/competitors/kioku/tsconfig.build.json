{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": [
    "packages/shared/src/**/*",
    "packages/api/src/**/*",
    "packages/cli/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "packages/*/dist",
    "packages-backup",
    "packages/ui"
  ]
}
