{
  "name": "kioku",
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/cli/dist/index.js",
  "bin": {
    "kioku": "packages/cli/dist/index.js"
  },
  "scripts": {
    "build": "bun run build:shared && bun run build:api && bun run build:cli && bun run build:ui",
    "build:shared": "bun --filter=@kioku/shared run build",
    "build:api": "bun --filter=@kioku/api run build",
    "build:cli": "bun --filter=@kioku/cli run build",
    "build:ui": "bun --filter=@kioku/ui run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:shared": "bun --filter=@kioku/shared test",
    "test:api": "bun --filter=@kioku/api test",
    "test:cli": "bun --filter=@kioku/cli test",
    "test:ui": "bun --filter=@kioku/ui test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "bun run type-check:shared && bun run type-check:api && bun run type-check:cli",
    "type-check:shared": "cd packages/shared && tsc --noEmit",
    "type-check:api": "cd packages/api && tsc --noEmit",
    "type-check:cli": "cd packages/cli && tsc --noEmit",
    "type-check:ui": "cd packages/ui && tsc --noEmit",
    "quality-gate": "bun run type-check && bun run lint && bun run test:api",
    "pre-commit": "bun run quality-gate",
    "kioku": "bun packages/cli/dist/index.js",
    "dev:cli": "bun packages/cli/src/index.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/bun": "latest",
    "@types/node": "^24.7.1",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.0",
    "vitest": "latest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@fastify/static": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "chromadb": "^3.0.17",
    "fastify": "^5.6.1",
    "minimatch": "^10.0.3",
    "openai": "^6.2.0",
    "prom-client": "^15.1.3",
    "prompts": "^2.4.2",
    "simple-git": "^3.28.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.24.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
